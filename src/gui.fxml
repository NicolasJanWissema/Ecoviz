<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="577.0" prefWidth="533.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Label fx:id="label" text="Label" />
            <Button mnemonicParsing="false" onAction="#showPlants" text="Show/Hide Plants" />
            <Button fx:id="button" mnemonicParsing="false" onAction="#hanndleButtonClick" text="Show/Hide Terrain" />
        </buttons>
      </ButtonBar>
   </bottom>
   <center>
      <AnchorPane fx:id="anchorPane" prefHeight="512.0" prefWidth="512.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="terrainCanvas" height="512.0" width="512.0" />
            <Canvas fx:id="undergrowthCanvas" height="512.0" width="512.0" />
            <Canvas fx:id="canopyCanvas" height="512.0" width="512.0" />
         </children>
      </AnchorPane>
   </center>
   <right>
      <ScrollPane prefHeight="512.0" prefWidth="215.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER_RIGHT">
         <content>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Canvas height="200.0" width="200.0" />
                  <Slider fx:id="canopySlider" max="1.0" value="1.0" />
                  <Slider fx:id="undergrowthSlider" max="1.0" prefWidth="1.0" value="1.0" />
                  <Slider fx:id="zoomSlider" max="1.0" prefHeight="14.0" prefWidth="104.0" value="1.0" />
                  <TextArea prefHeight="200.0" prefWidth="200.0" text="asdasdasd" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </right>
</BorderPane>
